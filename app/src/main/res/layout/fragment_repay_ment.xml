<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <com.rongxun.xqlc.UI.PullToRefreshLayout
        android:id="@+id/repay_ment_swip_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rongxun.xqlc.UI.LoadListView
            android:id="@+id/repay_ment_list_view"
            style="@style/scrollbar_shape_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6f7fb"
            android:divider="#f6f7fb"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:scrollbarSize="5dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="none"
            android:smoothScrollbar="true">

        </com.rongxun.xqlc.UI.LoadListView>
    </com.rongxun.xqlc.UI.PullToRefreshLayout>

    <LinearLayout
        android:id="@+id/repay_ment_nothing_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/repay_ment_nothing_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/list_nothing" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:text="暂无数据"/>
    </LinearLayout>

</RelativeLayout>
