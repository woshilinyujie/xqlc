<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/s100"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/s13"
                android:layout_marginRight="@dimen/s13"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:id="@+id/discover_platform_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:id="@+id/discover_platform_rel_finish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#50000000">

                    <ImageView
                        android:layout_width="@dimen/s70"
                        android:layout_height="@dimen/s70"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/platform_event_end" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/discover_platform_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s20"
                android:layout_marginTop="6dp"
                android:text="标题xxx"
                android:textColor="#666666"
                android:textSize="@dimen/s13" />

            <TextView
                android:id="@+id/discover_platform_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s20"
                android:layout_marginTop="6dp"
                android:text="2017-2-16"
                android:textColor="#aaaaaa"
                android:textSize="@dimen/s11" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>