<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:background="@drawable/update"
    android:orientation="vertical">

    <!--进度条-->
    <com.rongxun.xqlc.UI.ProgressWheel
        android:id="@+id/update_progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        app:pwBarColor="#FFE1E1"
        app:pwBarLength="360dp"
        app:pwBarWidth="12dp"
        app:pwCircleColor="#fe5856"
        app:pwDelayMillis="3"
        app:pwRimColor="#ffffff"
        app:pwRimWidth="10dp"
        app:pwSpinSpeed="4dp"
        app:pwText="--"
        app:pwTextColor="@android:color/white"
        app:pwTextSize="@dimen/s14"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="14dp"
        android:text="正在更新..."
        android:textColor="#333333"
        android:textSize="14sp" />

</LinearLayout>