<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">





    <RelativeLayout
        android:id="@+id/hb_bg_rl"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="@mipmap/jingxuan_bg"
        android:paddingLeft="20dp">

        <View
            android:background="#e8e8e8"
            android:layout_marginBottom="38dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true" />

        <RelativeLayout
            android:id="@+id/hongbao_img_layout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hongbao_list_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="10"
                android:singleLine="true"
                android:text="注册卷"
                android:textStyle="bold"
                android:textColor="#666666"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hongbao_list_item_type"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/hongbao_jiahao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="￥"
                    android:textColor="#ff3100"
                    android:textSize="20dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/hongbao_list_item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="#ff3100"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:id="@+id/hongbao_list_item_dead_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="(--到期)"
                android:textColor="#999999"
                android:textSize="12dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingRight="20dp">


            <TextView
                android:id="@+id/hongbao_list_item_mark"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="12"
                android:singleLine="true"
                android:text="适用项目：--"
                android:textColor="#666666"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/hongbao_list_item_time_line"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="期限满--天可用"
                android:textColor="#666666"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/hongbao_list_item_money_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:text="满--元可用"
                android:textColor="#666666"
                android:textSize="12dp" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/count_rl"
        android:layout_below="@+id/hb_bg_rl"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/jx_foot_use"
            android:gravity="center"
            android:text="立刻使用"
            android:textSize="15dp"
            android:textColor="#3574fa"
            android:background="@drawable/send_code"
            android:layout_width="110dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/jx_foot_count"
            android:textColor="#999999"
            android:text="--张"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/jx_foot_use"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>