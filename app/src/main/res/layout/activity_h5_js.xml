<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--标题栏-->
        <RelativeLayout
            android:id="@+id/h5_js_rel_title"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:id="@+id/h5_js_rel_back"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/h5_js_img_back"
                    android:layout_width="10dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/arrow_left" />

            </RelativeLayout>

            <TextView
                android:id="@+id/h5_js_txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="100dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="--"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/yaoqing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="推荐记录"
                android:textColor="#333333"
                android:textSize="16dp"
                android:visibility="gone" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/share_is_no_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:background="@mipmap/share" />

        </RelativeLayout>

        <View
            android:id="@+id/h5_js_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />


            <com.tencent.smtt.sdk.WebView
                android:id="@+id/h5_js_web"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />



    </LinearLayout>


</RelativeLayout>
