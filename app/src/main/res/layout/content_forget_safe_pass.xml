    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s15"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/s15"
        android:paddingRight="@dimen/s15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="请输入验证码"
            android:textColor="#666666"
            android:textSize="@dimen/s14" />

        <EditText
            android:id="@+id/forget_safe_pass_verify_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/s50"
            android:layout_weight="6"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="#333333"
            android:textColorHint="#cccccc"
            android:textSize="@dimen/s13" />

        <TextView
            android:id="@+id/forget_safe_pass_verify_button"
            android:layout_width="@dimen/s100"
            android:layout_height="@dimen/s30"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="获取验证码"
            android:textColor="#3574fa"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/s15"
        android:paddingRight="@dimen/s15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="设置新交易密码"
            android:textColor="#666666"
            android:textSize="@dimen/s14" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6">

            <EditText

                android:id="@+id/forget_safe_pass_new_pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s50"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:hint="请设置密码(6-16位)"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="#666666"
                android:textColorHint="#cccccc"
                android:textSize="@dimen/s13" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/forget_safe_pass_action_button"
