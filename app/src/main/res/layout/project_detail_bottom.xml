<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="#ffffff"
    android:minHeight="230dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f6f7fb" />
    <!--材料公示-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/s45">

        <ImageView
            android:id="@+id/project_detail_img_material_show"
            android:layout_width="@dimen/s25"
            android:layout_height="@dimen/s25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/s20"
            android:background="@mipmap/project_material_show"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/project_detail_txt_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/s16"
            android:layout_toRightOf="@id/project_detail_img_material_show"
            android:text="材料公示"
            android:textColor="#8c9cff"
            android:textSize="@dimen/s14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#f6f7fb" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/material_show_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/s20"
        android:layout_marginLeft="@dimen/s20"
        android:layout_marginRight="@dimen/s20"
        android:layout_marginTop="@dimen/s20" />
</LinearLayout>