<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/update">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/s14"
            android:text="温馨提示"
            android:textColor="#fa5454"
            android:textSize="@dimen/s18" />

        <TextView
            android:id="@+id/imessage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/s14"
            android:text="--------"
            android:textColor="#888888"
            android:textSize="@dimen/s14"
            android:layout_marginLeft="@dimen/s16"
            android:layout_marginRight="@dimen/s16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s14"
            android:layout_marginTop="@dimen/s14"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/imessage_message1"
                android:layout_width="0dp"
                android:layout_height="@dimen/s40"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/send_code_grey"
                android:gravity="center"
                android:text="取消"
                android:textColor="#808080"
                android:textSize="@dimen/s14" />

            <Button
                android:id="@+id/imessage_message"
                android:layout_width="0dp"
                android:layout_height="@dimen/s40"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="@dimen/s14" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>