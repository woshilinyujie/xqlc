<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.rongxun.xqlc.Activities.LoginPasswordActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/s15"
            android:paddingRight="@dimen/s15">

            <com.rongxun.xqlc.UI.BianSeTextView
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:text="设置登录密码"
                android:textSize="20dp" />

            <LinearLayout
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="您正在使用手机号 "
                    android:textSize="13dp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/login_password_phone"
                    android:text=""
                    android:textSize="13dp"
                    android:textColor="#151515"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="50dp"
                android:background="@mipmap/jingxuan_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s50">


                <EditText
                    android:gravity="center_vertical"
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:hint="请输入正确的登录密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textColorHint="#bbbbbb"
                    android:textSize="@dimen/s15" />


            </RelativeLayout>




            <Button
                android:id="@+id/login_password_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s50"
                android:layout_marginTop="140dp"
                android:background="@drawable/button_background_grey"
                android:gravity="center"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="@dimen/s17" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/login_password_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/s30"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="忘记密码？"
                    android:textColor="#999999"
                    android:textSize="13dp" />
                <TextView
                    android:id="@+id/login_password_login"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/s30"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="注册"
                    android:textColor="#999999"
                    android:textSize="13dp" />

            </RelativeLayout>


        </LinearLayout>

       <ImageView
           android:id="@+id/login_password_back"
           android:layout_marginBottom="30dp"
           android:background="@mipmap/left_lable"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_width="10dp"
           android:layout_height="20dp" />
    </RelativeLayout>
</RelativeLayout>
