<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">





    <RelativeLayout
        android:id="@+id/hb_bg_rl"
        android:layout_width="fill_parent"
        android:layout_height="145dp"
        android:layout_marginTop="14dp"
        android:background="@mipmap/jingxuan_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View

            android:background="#e2e2e2"
            android:layout_marginBottom="38dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true" />

        <RelativeLayout
            android:id="@+id/hongbao_img_layout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView

                android:layout_marginLeft="20dp"
                android:id="@+id/hongbao_list_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="10"
                android:singleLine="true"
                android:text="注册卷"
                android:textColor="#666666"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginLeft="7dp"
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hongbao_list_item_type"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <CheckBox
                    android:button="@null"
                    android:id="@+id/hongbao_choose_box"
                    android:background="@drawable/check_box_background_selector"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="35dp" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="￥"
                    android:textColor="#ff3100"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/hongbao_list_item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#ff3100"
                    android:textSize="32dp"
                    android:textStyle="bold" />

            </LinearLayout>



            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/hongbao_list_item_dead_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="(--到期)"
                android:textColor="#999999"
                android:textSize="13dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingRight="20dp">


            <TextView
                android:id="@+id/hongbao_list_item_type1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="12"
                android:singleLine="true"
                android:text="适用项目：--"
                android:textColor="#666666"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/hongbao_list_item_time_line"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="期限满--天可用"
                android:textColor="#666666"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/hongbao_list_item_money_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:text="满--元可用"
                android:textColor="#666666"
                android:textSize="13dp" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>