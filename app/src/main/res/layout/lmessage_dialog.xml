<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/update"
        android:orientation="vertical">

        <TextView
            android:id="@+id/imessage_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:text="温馨提示"
            android:textColor="#fa5454"
            android:textSize="18sp" />

        <TextView
            android:layout_marginRight="@dimen/s15"
            android:layout_marginLeft="@dimen/s15"
            android:id="@+id/imessage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="--------"
            android:textColor="#888888"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s14"
            android:layout_marginLeft="@dimen/s50"
            android:layout_marginRight="@dimen/s50"
            android:layout_marginTop="@dimen/s14"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/imessage_message"
                android:layout_width="0dp"
                android:layout_height="@dimen/s40"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:gravity="center"
                android:text="我知道了"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>