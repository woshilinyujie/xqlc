<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff">

        <com.rongxun.xqlc.chart.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/investment_incentive_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="总资产(元)"
                android:textColor="#999999"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="--"
                android:textColor="#333333"
                android:textSize="30dp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/no_cash"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/list_nothing"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/point_rect_red"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/point_rect_red" />

                <TextView
                    android:id="@+id/red_percent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:maxLength="6"
                    android:text="=="
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/all_property_purple1_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/point_rect_purple1"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/point_rect_purple" />

                <TextView
                    android:id="@+id/purple_percent_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:maxLength="6"
                    android:text="=="
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/point_rect_blue"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/point_rect_blue" />

                <TextView
                    android:id="@+id/blue_percent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:maxLength="6"
                    android:text="=="
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/point_rect_yellow"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/point_rect_yellow" />

                <TextView
                    android:id="@+id/yellow_percent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:maxLength="6"
                    android:text="=="
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/point_rect_purple"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:background="@drawable/point_rect_purple"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/purple_percent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-2dp"
                    android:maxLength="6"
                    android:text="=="
                    android:textColor="#000"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/purple_percent_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:text="%"
                    android:textColor="#000"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/point_rect_purple2"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:background="#FFEA00"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/purple_percent_jiaxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-2dp"
                    android:maxLength="6"
                    android:text="=="
                    android:textColor="#000"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/purple_percent_jiaxi_baifenbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:text="%"
                    android:textColor="#000"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="#ffff"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e2e2" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="10dp">


            <TextView
                android:textColor="#333333"
                android:id="@+id/yue_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="现金余额(元)"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/property_p3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="00.00"
                android:textColor="#ff3100"
                android:textSize="@dimen/s16" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e2e2" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="10dp">


            <TextView
                android:textColor="#333333"
                android:id="@+id/benjin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="待收本金(元)"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/property_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="00.00"
                android:textColor="#ff3100"
                android:textSize="@dimen/s16" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e2e2" />

        <RelativeLayout
            android:id="@+id/all_property_purple1_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="10dp">


            <TextView
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="投资冻结中金额(元)"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/property_p5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="00.00"
                android:textColor="#ff3100"
                android:textSize="@dimen/s16" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e2e2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="10dp">


            <TextView
                android:textColor="#333333"
                android:id="@+id/tixian_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/property_p2"
                android:layout_alignBottom="@+id/property_p2"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:text="提现冻结金额(元)"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/property_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="00.00"
                android:textColor="#ff3100"
                android:textSize="@dimen/s16" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/investment_incentive_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s45"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/all_property_purple"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:background="@drawable/point_purple" />

            <TextView
                android:id="@+id/investment_incentive_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/all_property_purple"
                android:text="好友投资奖励"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/property_p4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="00.00"
                android:textColor="#f65353"
                android:textSize="@dimen/s16" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/investment_incentive_rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s45"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/all_property_purple2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:background="@drawable/point_yellow_a" />

            <TextView
                android:id="@+id/investment_incentive_jiaxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/all_property_purple2"
                android:text="已获得加息卷收益"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/property_p6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="00.00"
                android:textColor="#f65353"
                android:textSize="@dimen/s16" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e2e2" />



    </LinearLayout>
</LinearLayout>