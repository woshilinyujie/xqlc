<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_repay_ment"
    tools:context="com.rongxun.xqlc.Activities.RepayMentActivity">

    <com.rongxun.xqlc.UI.slidingtab.SlidingTabLayout
        android:id="@+id/content_repay_ment_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s50"
        app:tl_indicator_color="#ff0000"
        app:tl_indicator_height="1.5dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="#ff0000"
        app:tl_textUnselectColor="#999999"
        app:tl_textsize="16sp"
        app:tl_underline_color="#f6f6f6"
        app:tl_underline_height="1dp"
        android:background="#ffffff"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/content_repay_ment_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
