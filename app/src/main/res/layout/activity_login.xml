<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/login_imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s130"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <com.rongxun.xqlc.UI.BianSeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:text="欢迎使用小强理财"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="请输入您的手机号进行登录和注册操作"
            android:textColor="#999999"
            android:textSize="16dp" />


        <EditText
            android:gravity="center_vertical"
            android:layout_marginTop="70dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="15dp"
            android:id="@+id/login_regist_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s60"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/jingxuan_bg"
            android:hint="请输入正确的手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#444444"
            android:textColorHint="#999999"
            android:textSize="@dimen/s15" />
        <Button
            android:gravity="center"
            android:id="@+id/login_regist_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s50"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/button_background_grey"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="@dimen/s17" />


    </LinearLayout>

        <ImageView
            android:id="@+id/login_regist_back"
            android:background="@mipmap/cancel"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_width="22dp"
            android:layout_height="22dp" />
    </RelativeLayout>


</LinearLayout>