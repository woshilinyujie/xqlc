<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/confirm_investment_rel_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s45"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/confirm_investment_rel_back"
            android:layout_width="@dimen/s50"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/confirm_investment_img_back"
                android:layout_width="@dimen/s11"
                android:layout_height="@dimen/s18"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/s20"
                android:src="@mipmap/arrow_left" />

        </RelativeLayout>

        <TextView
            android:id="@+id/confirm_investment_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="--"
            android:textColor="#333333"
            android:textSize="@dimen/s18" />

    </RelativeLayout>

    <include layout="@layout/content_project_invest" />

</LinearLayout>
