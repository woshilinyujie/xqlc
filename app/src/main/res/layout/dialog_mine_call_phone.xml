<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mine_call_phone_border_radius">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="#fa5454"
            android:textSize="@dimen/s25" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/s13"
            android:text="暂无"
            android:textColor="#888888"
            android:textSize="@dimen/s14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s12"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/s12"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="@dimen/s40"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/send_code"
                android:gravity="center"
                android:text="取消"
                android:textColor="#fa5454"
                android:textSize="@dimen/s16" />

            <Button
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="@dimen/s40"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/send_code_red"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="@dimen/s16" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
