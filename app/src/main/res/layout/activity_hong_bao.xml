<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0px">

        <android.support.v7.widget.Toolbar
            android:id="@+id/hongbao_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s50"
            android:background="@color/colorWhite"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <com.rongxun.xqlc.UI.IconFontTextView
                android:id="@+id/hongbao_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="@string/angle_left"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/s24"/>
            <TextView
                android:id="@+id/hongbao_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="优惠卷使用说明"
                android:textColor="#646464"
                android:textSize="@dimen/s18"
                android:visibility="visible" />

            <TextView
                android:id="@+id/hongbao_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:text="红包说明"
                android:layout_marginRight="12dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/s14"
                android:visibility="visible" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2" />




    <android.support.design.widget.TabLayout
        android:id="@+id/hongbao_tb"
        app:tabTextColor="#999999"
        android:minWidth="10dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        app:tabIndicatorColor="#3574fa"
        app:tabSelectedTextColor="#3574fa" />
    <android.support.v4.view.ViewPager
        android:id="@+id/hongbao_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>