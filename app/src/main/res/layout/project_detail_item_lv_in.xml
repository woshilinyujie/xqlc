<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingRight="@dimen/s20"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/project_detail_txt_dot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignTop="@+id/project_detail_txt_content"
        android:layout_marginLeft="@dimen/s20"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_project_detail_debtor" />

    <TextView
        android:id="@+id/project_detail_txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/s11"
        android:layout_toRightOf="@id/project_detail_txt_dot"
        android:text="增加企业流动资金，缓减库存压力"
        android:textColor="#666666"
        android:textSize="@dimen/s12" />

</RelativeLayout>