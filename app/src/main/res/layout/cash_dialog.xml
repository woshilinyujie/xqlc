<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_background_top_up"
    android:orientation="vertical"
    android:paddingLeft="@dimen/s20"
    android:paddingRight="@dimen/s20">

    <LinearLayout
        android:id="@+id/cash_dialog_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:textColor="#666666"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/cash_dialog_tx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=" 元"
                android:textColor="#666666"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/cash_dialog_cash_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/cash_dialog_tx1"
                android:text="--"
                android:textColor="#ff3100"
                android:textSize="@dimen/s16" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手续费"
                android:textColor="#666666"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/cash_dialog_tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=" 元"
                android:textColor="#666666"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/cash_dialog_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/cash_dialog_tx2"
                android:text="--"
                android:textColor="#ff3100"
                android:textSize="@dimen/s16" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到账金额"
                android:textColor="#2d2d2d"
                android:textSize="@dimen/s20" />

            <TextView
                android:id="@+id/cash_dialog_tx3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=" 元"
                android:textColor="#666666"
                android:textSize="@dimen/s20" />

            <TextView
                android:id="@+id/cash_dialog_arrive_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/cash_dialog_tx3"
                android:text="--"
                android:textColor="#ff3100"
                android:textSize="@dimen/s20" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/cash_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/s11"
        android:text="输入交易密码"
        android:textColor="#ff3100"
        android:textSize="@dimen/s18" />


    <TextView
        android:id="@+id/cash_dialog_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易密码错误"
        android:textColor="#f52a2a"
        android:visibility="invisible" />

    <EditText
        android:gravity="center_vertical"
        android:id="@+id/cash_dialog_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s40"
        android:layout_marginTop="10dp"
        android:background="@drawable/cash_button_grey"
        android:hint="请输入交易密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textColorHint="#999999"
        android:textSize="@dimen/s13" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/s40">


        <TextView
            android:id="@+id/cash_dialog_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="忘记密码？"
            android:textColor="#808080"
            android:textSize="@dimen/s12" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/s40"
        android:layout_marginBottom="@dimen/s20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cash_dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/cash_button_grey"
            android:gravity="center"
            android:text="取消"
            android:textColor="#808080"
            android:textSize="@dimen/s14" />

        <TextView
            android:id="@+id/cash_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="@dimen/s14" />

    </LinearLayout>
</LinearLayout>